{
  "manifest_version": 3,
  "name": "Ransomware Detector",
  "version": "0.1.0",
  "description": "Scans .exe and .dll files for ransomware signatures using a backend API.",
  "permissions": [
    "notifications",
    "storage" 
  ],
  "host_permissions": [
    "http://localhost:8000/*" 
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}